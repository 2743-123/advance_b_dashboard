{
  "compilerOptions": {
    
    "target": "esnext",                         // Latest JavaScript features
    "module": "commonjs",                       // Module system (commonjs for Node.js)
    "lib": ["esnext", "dom","ES6"],                  // Libraries to include
    "allowJs": true,                            // Allow JavaScript files to be compiled
    "checkJs": false,                           // Disable type checking for JavaScript files
    "jsx": "react-jsx",                         // Use React JSX transform (for React projects)
    "strict": true,                             // Enable all strict type-checking options
    "noImplicitAny": true,                      // Raise error on expressions and declarations with an implied 'any' type
    "strictNullChecks": true,                   // Enable strict null checks
    "strictFunctionTypes": true,                // Ensure function parameter bivariance
    "strictBindCallApply": true,                // Check bind, call, and apply methods
    "strictPropertyInitialization": true,       // Ensure class properties are correctly initialized
    "noImplicitThis": true,                     // Raise error on 'this' expressions with an implied 'any' type
    "alwaysStrict": true,                       // Ensure 'use strict' is emitted in all files
    "moduleResolution": "node",                 // Specify module resolution strategy
    "esModuleInterop": true,                    // Enable emit interoperability between CommonJS and ES Modules
    "forceConsistentCasingInFileNames": true,  // Disallow inconsistently-cased references to the same file
    "outDir": "./dist",                         // Redirect output structure to the 'dist' directory
    "rootDir": "./api",                         // Specify the root directory of input files
    "skipLibCheck": true,                       // Skip type checking of declaration files
    "resolveJsonModule": true,                  // Allow importing JSON files
    "typeRoots" : ["./api/types", "./node_modules/@types"],
    "types": ["node", "express"],
    "noFallthroughCasesInSwitch": true,          // Ensure all switch cases are handled
  },
 
  "include": ["api/**/*"] ,                 // Files to include in compilation
  "exclude": ["node_modules", "dist"],         // Files to exclude from compilation
  "references": []                         // Project references for monorepo or composite projects
 
}
